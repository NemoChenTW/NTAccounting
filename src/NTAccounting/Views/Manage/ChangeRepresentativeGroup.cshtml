@model ChangeRepresentativeGroupViewModel
@{
    ViewData["Title"] = "Set Representative Group";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangeRepresentativeGroup" method="post" class="form-horizontal" role="form">
    <h4>Change RepresentativeGroup Form</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TheUserRepresentativeGroup" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="TheUserRepresentativeGroup" class="form-control" asp-items="(SelectList)@ViewData["RepresentativeGroup"]"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Change</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}